---
/**
 * Approach page — Investment philosophy, process flow, risk management.
 */
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import '../styles/components.css';
import '../styles/animations.css';

import Navigation from '../components/Navigation.astro';
import PageHero from '../components/PageHero.astro';
import SectionHeader from '../components/SectionHeader.astro';
import GlassCard from '../components/GlassCard.astro';
import GoldDivider from '../components/GoldDivider.astro';
import PageFooter from '../components/PageFooter.astro';
import SubpageScripts from '../components/SubpageScripts.astro';
---

<Layout title="Our Approach — Algosphere Asset Management" description="Disciplined, data-driven investment strategies. Learn about Algosphere's systematic approach to fund management.">

  <Navigation />

  <PageHero
    title="Disciplined Strategies, Measurable Outcomes"
    titleHy="&#1343;&#1377;&#1408;&#1379;&#1377;&#1402;&#1377;&#1392;&#1400;&#1406; &#1356;&#1377;&#1382;&#1396;&#1377;&#1406;&#1377;&#1408;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;&#1398;&#1381;&#1408;, &#1353;&#1377;&#1411;&#1381;&#1388;&#1387; &#1329;&#1408;&#1380;&#1397;&#1400;&#1410;&#1398;&#1412;&#1398;&#1381;&#1408;"
    subtitle="Our investment philosophy is built on the belief that systematic analysis and rigorous risk management consistently outperform impulsive decision-making. Every investment passes through our four-stage process before a single unit of capital is deployed."
    subtitleHy="&#1348;&#1381;&#1408; &#1398;&#1381;&#1408;&#1380;&#1408;&#1400;&#1410;&#1396;&#1377;&#1397;&#1387;&#1398; &#1411;&#1387;&#1388;&#1387;&#1405;&#1400;&#1411;&#1377;&#1397;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;&#1384; &#1392;&#1387;&#1396;&#1398;&#1406;&#1377;&#1390; &#1383; &#1392;&#1377;&#1396;&#1377;&#1391;&#1377;&#1408;&#1379;&#1377;&#1397;&#1387;&#1398; &#1406;&#1381;&#1408;&#1388;&#1400;&#1410;&#1390;&#1400;&#1410;&#1385;&#1397;&#1377;&#1398; &#1415; &#1389;&#1387;&#1405;&#1407; &#1404;&#1387;&#1405;&#1391;&#1381;&#1408;&#1387; &#1391;&#1377;&#1404;&#1377;&#1406;&#1377;&#1408;&#1396;&#1377;&#1398; &#1406;&#1408;&#1377;&#1417;"
    label="Investment Approach"
    labelHy="&#1348;&#1400;&#1407;&#1381;&#1409;&#1400;&#1410;&#1396;"
  />

  <GoldDivider />

  <!-- Investment Process Flow -->
  <section class="relative py-24 sm:py-32 lg:py-40 overflow-hidden">
    <div class="absolute top-0 right-0 w-[500px] h-[500px] ambient-blob bg-gold-400"></div>

    <div class="section-inner max-w-[1200px] mx-auto px-6 lg:px-20 relative z-10">
      <div class="text-center mb-16 lg:mb-24">
        <SectionHeader label="Our Process" labelHy="&#1348;&#1381;&#1408; &#1331;&#1400;&#1408;&#1390;&#1384;&#1398;&#1385;&#1377;&#1409;&#1384;" centered>
          <h2 class="font-heading text-3xl sm:text-4xl lg:text-[3rem] text-text-primary font-semibold leading-[1.1]">
