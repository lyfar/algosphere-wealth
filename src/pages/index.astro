---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout title="Algosphere Asset Management">

  <!-- ═══════════════════════════════════════════════════════════════
       NAVIGATION
       ═══════════════════════════════════════════════════════════════ -->
  <nav id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-700 border-b border-transparent">
    <div class="max-w-[1200px] mx-auto px-6 lg:px-20 py-5 flex items-center justify-between">
      <a href="#hero" class="flex items-center gap-3 group">
        <div class="logo-circle">
          <span class="text-gold-gradient font-heading text-base font-semibold">A</span>
        </div>
        <div class="hidden sm:flex flex-col">
          <span class="text-[0.65rem] tracking-[0.2em] uppercase text-text-muted group-hover:text-text-primary transition-colors duration-600 font-light">
            Algosphere
          </span>
        </div>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden md:flex items-center gap-10 lg:gap-14">
        <a href="#about" class="nav-link text-[0.7rem] tracking-[0.15em] uppercase text-text-muted hover:text-gold-400 transition-all duration-500 font-normal" data-i18n data-hy="&#1336;&#1398;&#1391;&#1381;&#1408;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;" data-en="Company">&#1336;&#1398;&#1391;&#1381;&#1408;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;</a>
        <a href="#vision" class="nav-link text-[0.7rem] tracking-[0.15em] uppercase text-text-muted hover:text-gold-400 transition-all duration-500 font-normal" data-i18n data-hy="&#1357;&#1391;&#1382;&#1378;&#1400;&#1410;&#1398;&#1412;&#1398;&#1381;&#1408;" data-en="Principles">&#1357;&#1391;&#1382;&#1378;&#1400;&#1410;&#1398;&#1412;&#1398;&#1381;&#1408;</a>
        <a href="#" class="nav-link text-[0.7rem] tracking-[0.15em] uppercase text-text-muted hover:text-gold-400 transition-all duration-500 font-normal">Investor Portal</a>
        <a href="#contact" class="nav-link text-[0.7rem] tracking-[0.15em] uppercase text-gold-400/60 hover:text-gold-400 transition-all duration-500 font-normal" data-i18n data-hy="&#1343;&#1377;&#1402;&#1406;&#1381;&#1388;" data-en="Request Access">&#1343;&#1377;&#1402;&#1406;&#1381;&#1388;</a>
        <!-- Language Switcher -->
        <div class="lang-switcher flex items-center gap-1 ml-3">
          <button id="lang-hy" class="lang-btn active text-[9px] tracking-[0.15em] uppercase font-medium px-2 py-1 rounded transition-all duration-300">&#1344;Y</button>
          <span class="text-text-muted/30 text-[10px]">|</span>
          <button id="lang-en" class="lang-btn text-[9px] tracking-[0.15em] uppercase font-medium px-2 py-1 rounded transition-all duration-300">EN</button>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button id="hamburger-btn" class="md:hidden relative w-9 h-9 flex items-center justify-center" aria-label="Toggle menu">
        <div class="hamburger-icon">
          <span class="ham-line ham-1"></span>
          <span class="ham-line ham-2"></span>
        </div>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="mobile-menu fixed inset-0 z-[60] pointer-events-none">
    <div class="mobile-menu-backdrop absolute inset-0 bg-bg-primary/96 backdrop-blur-xl opacity-0 transition-opacity duration-500"></div>
    <div class="mobile-menu-content absolute inset-0 flex flex-col items-center justify-center gap-10 translate-y-[-20px] opacity-0 transition-all duration-500">
      <button id="mobile-close" class="absolute top-6 right-6 w-10 h-10 flex items-center justify-center" aria-label="Close menu">
        <svg class="w-5 h-5 text-gold-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <a href="#about" class="mobile-nav-link text-3xl tracking-[0.08em] text-text-secondary hover:text-gold-400 transition-all duration-400 font-medium" data-i18n data-hy="&#1336;&#1398;&#1391;&#1381;&#1408;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;" data-en="Company">&#1336;&#1398;&#1391;&#1381;&#1408;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;</a>
      <a href="#vision" class="mobile-nav-link text-3xl tracking-[0.08em] text-text-secondary hover:text-gold-400 transition-all duration-400 font-medium" data-i18n data-hy="&#1357;&#1391;&#1382;&#1378;&#1400;&#1410;&#1398;&#1412;&#1398;&#1381;&#1408;" data-en="Principles">&#1357;&#1391;&#1382;&#1378;&#1400;&#1410;&#1398;&#1412;&#1398;&#1381;&#1408;</a>
      <a href="#contact" class="mobile-nav-link text-3xl tracking-[0.08em] text-text-secondary hover:text-gold-400 transition-all duration-400 font-medium" data-i18n data-hy="&#1343;&#1377;&#1402;&#1406;&#1381;&#1388;" data-en="Request Access">&#1343;&#1377;&#1402;&#1406;&#1381;&#1388;</a>
      <div class="mt-6 flex items-center gap-3">
        <button class="mobile-lang-btn text-sm tracking-[0.15em] uppercase font-medium px-4 py-2 rounded border border-gold-400/25 transition-all duration-300" data-lang="hy">&#1344;Y</button>
        <button class="mobile-lang-btn text-sm tracking-[0.15em] uppercase font-medium px-4 py-2 rounded border border-gold-400/25 transition-all duration-300" data-lang="en">EN</button>
      </div>
    </div>
  </div>


  <!-- ═══════════════════════════════════════════════════════════════
       HERO — CINEMATIC, SINGLE FOCUS
       ═══════════════════════════════════════════════════════════════ -->
  <section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden noise-overlay">
    <div class="starfield" id="starfield"></div>
    <canvas id="particles-canvas"></canvas>

    <!-- Subtle radial glow -->
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(212,175,55,0.04)_0%,transparent_60%)]"></div>

    <div class="relative z-10 text-center px-6 max-w-[900px] mx-auto">
      <!-- Small Logo -->
      <div class="mb-16 flex justify-center gs-hero-el" data-hero-delay="0">
        <div class="w-[64px] h-[64px] border border-gold-400/25 rounded-full flex items-center justify-center hero-logo-ring">
          <span class="text-gold-gradient font-heading text-[1.8rem] font-semibold leading-none">A</span>
        </div>
      </div>

      <!-- Hero Headline — Serif, cinematic -->
      <h1 class="font-heading text-4xl sm:text-5xl md:text-6xl lg:text-[4.5rem] font-semibold tracking-[-0.02em] leading-[1.08] mb-6 text-text-primary" id="hero-headline">
        <span class="gs-hero-el inline-block" data-hero-delay="0.2" data-i18n data-hy="&#1352;&#1408;&#1407;&#1381;&#1394; &#1359;&#1381;&#1405;&#1388;&#1377;&#1391;&#1377;&#1398;&#1384;" data-en="Where Vision">Where Vision</span>
        <br />
        <span class="gs-hero-el inline-block" data-hero-delay="0.35" data-i18n data-hy="&#1344;&#1377;&#1398;&#1380;&#1387;&#1402;&#1400;&#1410;&#1396; &#1383; <em class='text-gold-gradient'>&#1338;&#1377;&#1404;&#1377;&#1398;&#1379;&#1400;&#1410;&#1385;&#1397;&#1377;&#1398;&#1384;</em>" data-en="Meets <em class='text-gold-gradient font-normal italic'>Legacy</em>">Meets <em class="text-gold-gradient font-normal italic">Legacy</em></span>
      </h1>

      <!-- Subtle tagline -->
      <p class="gs-hero-el text-[0.75rem] tracking-[0.2em] uppercase text-text-muted font-normal mt-10 mb-6" data-hero-delay="0.55" data-i18n data-hy="&#1363;&#1377;&#1391; &#1350;&#1381;&#1408;&#1380;&#1408;&#1400;&#1410;&#1396;&#1377;&#1397;&#1387;&#1398; &#1366;&#1400;&#1398;&#1380;&#1381;&#1408;&#1387; &#1343;&#1377;&#1404;&#1377;&#1406;&#1377;&#1408;&#1400;&#1410;&#1396;" data-en="Closed-End Investment Fund Management">
        Closed-End Investment Fund Management
      </p>

      <!-- Gold divider line -->
      <div class="gs-hero-el gs-line-h mt-4 mx-auto" data-hero-delay="0.7" style="width: 80px; height: 1px; background: linear-gradient(90deg, transparent, rgba(212,175,55,0.5), transparent);"></div>

      <!-- By invitation -->
      <p class="gs-hero-el text-[0.65rem] tracking-[0.25em] uppercase text-text-muted/50 font-light mt-10" data-hero-delay="0.85" data-i18n data-hy="&#1344;&#1377;&#1406;&#1377;&#1407;&#1377;&#1408;&#1396;&#1377;&#1379;&#1408;&#1406;&#1377;&#1390; &#1350;&#1381;&#1408;&#1380;&#1408;&#1400;&#1394;&#1398;&#1381;&#1408;&#1387; &#1344;&#1377;&#1396;&#1377;&#1408;" data-en="Accredited Investors Only">
        Accredited Investors Only
      </p>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 scroll-indicator gs-hero-el" data-hero-delay="1.3">
      <div class="w-[18px] h-[28px] border border-gold-400/15 rounded-full flex justify-center pt-1.5">
        <div class="w-[2px] h-[5px] bg-gold-400/30 rounded-full animate-bounce"></div>
      </div>
    </div>
  </section>

  <!-- Gold Divider -->
  <div class="gold-divider gs-line-h"></div>


  <!-- ═══════════════════════════════════════════════════════════════
       ABOUT
       ═══════════════════════════════════════════════════════════════ -->
  <section id="about" class="relative py-32 sm:py-40 lg:py-48 overflow-hidden">
    <div class="absolute top-0 right-0 w-[500px] h-[500px] ambient-blob bg-gold-400"></div>

    <div class="section-inner max-w-[1200px] mx-auto px-6 lg:px-20 relative z-10">
      <!-- Label -->
      <div class="gs-reveal">
        <div class="section-accent"></div>
        <p class="section-label mb-5" data-i18n data-hy="&#1348;&#1381;&#1408; &#1396;&#1377;&#1405;&#1387;&#1398;" data-en="About Us">&#1348;&#1381;&#1408; &#1396;&#1377;&#1405;&#1387;&#1398;</p>
      </div>

      <!-- Heading -->
      <h2 class="gs-reveal font-heading text-3xl sm:text-4xl lg:text-[3.5rem] text-text-primary font-semibold mb-16 leading-[1.1]">
        <span data-i18n data-hy="&#1355;&#1387;&#1399;&#1407; &#1397;&#1400;&#1410;&#1408;&#1377;&#1412;&#1377;&#1398;&#1401;&#1397;&#1400;&#1410;&#1408;<br /><span class='text-gold-gradient'>&#1350;&#1381;&#1408;&#1380;&#1408;&#1400;&#1410;&#1396;&#1377;&#1397;&#1387;&#1398; &#1352;&#1408;&#1400;&#1399;&#1400;&#1410;&#1396;</span>" data-en="Precision in Every<br /><span class='text-gold-gradient'>Investment Decision</span>">Precision in Every<br /><span class="text-gold-gradient">Investment Decision</span></span>
      </h2>

      <!-- Body -->
      <div class="gs-reveal max-w-[720px]">
        <p class="text-[17px] text-text-secondary font-light leading-[1.75] tracking-[0.01em]" data-i18n data-hy="ALGOSPHERE ASSET MANAGEMENT &#1384;&#1398;&#1391;&#1381;&#1408;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;&#1384; &#1396;&#1377;&#1405;&#1398;&#1377;&#1379;&#1387;&#1407;&#1377;&#1409;&#1377;&#1390; &#1383; &#1411;&#1377;&#1391;, &#1400;&#1401; &#1392;&#1408;&#1377;&#1402;&#1377;&#1408;&#1377;&#1391;&#1377;&#1397;&#1387;&#1398; &#1398;&#1381;&#1408;&#1380;&#1408;&#1400;&#1410;&#1396;&#1377;&#1397;&#1387;&#1398; &#1411;&#1400;&#1398;&#1380;&#1381;&#1408;&#1387; &#1391;&#1377;&#1404;&#1377;&#1406;&#1377;&#1408;&#1396;&#1377;&#1398; &#1396;&#1381;&#1403;&#1417; &#1348;&#1381;&#1408; &#1398;&#1402;&#1377;&#1407;&#1377;&#1391;&#1398; &#1383; &#1377;&#1404;&#1377;&#1403;&#1377;&#1408;&#1391;&#1381;&#1388; &#1377;&#1404;&#1377;&#1406;&#1381;&#1388; &#1377;&#1408;&#1380;&#1397;&#1400;&#1410;&#1398;&#1377;&#1406;&#1381;&#1407; &#1398;&#1381;&#1408;&#1380;&#1408;&#1400;&#1410;&#1396;&#1377;&#1397;&#1387;&#1398; &#1404;&#1377;&#1382;&#1396;&#1377;&#1406;&#1377;&#1408;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;&#1398;&#1381;&#1408;, &#1377;&#1403;&#1377;&#1391;&#1409;&#1381;&#1388; &#1391;&#1377;&#1397;&#1400;&#1410;&#1398; &#1414;&#1387;&#1398;&#1377;&#1398;&#1405;&#1377;&#1391;&#1377;&#1398; &#1377;&#1395;&#1387;&#1398; &#1415; &#1405;&#1407;&#1381;&#1394;&#1390;&#1381;&#1388; &#1406;&#1405;&#1407;&#1377;&#1392;&#1381;&#1388;&#1387; &#1379;&#1400;&#1408;&#1390;&#1384;&#1398;&#1391;&#1381;&#1408;&#1377;&#1397;&#1387;&#1398; &#1392;&#1377;&#1408;&#1377;&#1378;&#1381;&#1408;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;&#1398;&#1381;&#1408;:" data-en="Algosphere Asset Management specializes in managing closed, non-public investment funds. Rooted in a tradition of Armenian entrepreneurship and prudent stewardship, we pursue long-term value creation through disciplined strategies, unwavering transparency, and trusted partnerships.">
          Algosphere Asset Management specializes in managing closed, non-public investment funds. Rooted in a tradition of Armenian entrepreneurship and prudent stewardship, we pursue long-term value creation through disciplined strategies, unwavering transparency, and trusted partnerships.
        </p>
      </div>

      <!-- Est. line -->
      <div class="gs-reveal mt-16 flex items-center gap-4">
        <div class="h-px w-10 bg-gradient-to-r from-gold-400/20 to-transparent gs-line-h"></div>
        <p class="text-[0.65rem] tracking-[0.25em] uppercase text-text-muted/40 font-light">Est. 2024 &middot; Yerevan</p>
      </div>
    </div>
  </section>

  <!-- Gold Divider -->
  <div class="gold-divider gs-line-h"></div>


  <!-- ═══════════════════════════════════════════════════════════════
       VISION / MISSION / VALUES
       ═══════════════════════════════════════════════════════════════ -->
  <section id="vision" class="relative py-32 sm:py-40 lg:py-48 overflow-hidden">
    <div class="absolute bottom-0 left-1/4 w-[500px] h-[500px] ambient-blob bg-gold-400"></div>

    <div class="section-inner max-w-[1200px] mx-auto px-6 lg:px-20 relative z-10">
      <!-- Section Header -->
      <div class="text-center mb-20 lg:mb-28">
        <div class="gs-reveal flex flex-col items-center">
          <div class="section-accent mx-auto"></div>
          <p class="section-label mb-5" data-i18n data-hy="&#1359;&#1381;&#1405;&#1388;&#1377;&#1391;&#1377;&#1398;, &#1329;&#1404;&#1377;&#1412;&#1381;&#1388;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;, &#1329;&#1408;&#1386;&#1381;&#1412;&#1398;&#1381;&#1408;" data-en="Our Principles">Our Principles</p>
          <h2 class="font-heading text-3xl sm:text-4xl lg:text-[3.5rem] text-text-primary font-semibold leading-[1.1]">
            <span data-i18n data-hy="&#1343;&#1377;&#1404;&#1400;&#1410;&#1409;&#1406;&#1377;&#1390; <span class='text-gold-gradient'>&#1331;&#1381;&#1408;&#1377;&#1382;&#1377;&#1398;&#1409;&#1400;&#1410;&#1385;&#1397;&#1377;&#1398; &#1406;&#1408;&#1377;</span>" data-en="Built on <span class='text-gold-gradient'>Excellence</span>">Built on <span class="text-gold-gradient">Excellence</span></span>
          </h2>
        </div>
      </div>

      <!-- Cards -->
      <div class="grid md:grid-cols-3 gap-6 lg:gap-8">

        <!-- Vision -->
        <div class="glass-card p-10 lg:p-12 gs-reveal-scale">
          <div class="flex items-center gap-3.5 mb-8">
            <div class="w-11 h-11 border border-glass-border rounded-xl flex items-center justify-center bg-gold-400/[0.03]">
              <svg class="w-5 h-5 text-gold-400/70" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="font-heading text-2xl text-text-primary font-semibold" data-i18n data-hy="&#1359;&#1381;&#1405;&#1388;&#1377;&#1391;&#1377;&#1398;" data-en="Vision">&#1359;&#1381;&#1405;&#1388;&#1377;&#1391;&#1377;&#1398;</h3>
          </div>
          <p class="text-text-secondary/85 font-light leading-[1.8] text-[15px]" data-i18n data-hy="&#1350;&#1402;&#1377;&#1405;&#1407;&#1381;&#1388;&#1400;&#1406; &#1396;&#1381;&#1408; &#1398;&#1381;&#1408;&#1380;&#1408;&#1400;&#1394;&#1398;&#1381;&#1408;&#1387; &#1392;&#1377;&#1396;&#1377;&#1408; &#1381;&#1408;&#1391;&#1377;&#1408;&#1377;&#1386;&#1377;&#1396;&#1391;&#1381;&#1407; &#1377;&#1408;&#1386;&#1381;&#1412;&#1387; &#1405;&#1407;&#1381;&#1394;&#1390;&#1396;&#1377;&#1398;&#1384;, &#1413;&#1379;&#1407;&#1377;&#1379;&#1400;&#1408;&#1390;&#1381;&#1388;&#1400;&#1406; &#1398;&#1400;&#1408;&#1377;&#1408;&#1377;&#1408;&#1377;&#1391;&#1377;&#1398; &#1415; &#1395;&#1391;&#1400;&#1410;&#1398; &#1388;&#1400;&#1410;&#1390;&#1400;&#1410;&#1396;&#1398;&#1381;&#1408;&#1417;" data-en="Creating long-term value for our investors through innovative and flexible solutions while ensuring transparency, integrity, and regulatory compliance.">
            Creating long-term value for our investors through innovative and flexible solutions while ensuring transparency, integrity, and regulatory compliance.
          </p>
        </div>

        <!-- Mission -->
        <div class="glass-card p-10 lg:p-12 gs-reveal-scale">
          <div class="flex items-center gap-3.5 mb-8">
            <div class="w-11 h-11 border border-glass-border rounded-xl flex items-center justify-center bg-gold-400/[0.03]">
              <svg class="w-5 h-5 text-gold-400/70" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
              </svg>
            </div>
            <h3 class="font-heading text-2xl text-text-primary font-semibold" data-i18n data-hy="&#1329;&#1404;&#1377;&#1412;&#1381;&#1388;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;" data-en="Mission">&#1329;&#1404;&#1377;&#1412;&#1381;&#1388;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;</h3>
          </div>
          <p class="text-text-secondary/85 font-light leading-[1.8] text-[15px]" data-i18n data-hy="&#1332;&#1377;&#1404;&#1398;&#1377;&#1388; &#1344;&#1377;&#1397;&#1377;&#1405;&#1407;&#1377;&#1398;&#1387; &#1377;&#1391;&#1407;&#1387;&#1406;&#1398;&#1381;&#1408;&#1387; &#1391;&#1377;&#1404;&#1377;&#1406;&#1377;&#1408;&#1396;&#1377;&#1398; &#1377;&#1404;&#1377;&#1403;&#1377;&#1407;&#1377;&#1408; &#1384;&#1398;&#1391;&#1381;&#1408;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;, &#1400;&#1408;&#1384; &#1395;&#1377;&#1398;&#1377;&#1401;&#1406;&#1377;&#1390; &#1383; &#1398;&#1381;&#1408;&#1380;&#1408;&#1400;&#1410;&#1396;&#1377;&#1397;&#1387;&#1398; &#1411;&#1400;&#1398;&#1380;&#1381;&#1408;&#1387; &#1391;&#1377;&#1404;&#1377;&#1406;&#1377;&#1408;&#1396;&#1377;&#1398; &#1396;&#1381;&#1390; &#1411;&#1400;&#1408;&#1393;&#1377;&#1404;&#1400;&#1410;&#1385;&#1397;&#1377;&#1396;&#1378;:" data-en="To become Armenia's leading asset management company, recognized for extensive experience in investment fund management and trusted by discerning investors.">
            To become Armenia's leading asset management company, recognized for extensive experience in investment fund management and trusted by discerning investors.
          </p>
        </div>

        <!-- Values -->
        <div class="glass-card p-10 lg:p-12 gs-reveal-scale">
          <div class="flex items-center gap-3.5 mb-8">
            <div class="w-11 h-11 border border-glass-border rounded-xl flex items-center justify-center bg-gold-400/[0.03]">
              <svg class="w-5 h-5 text-gold-400/70" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
              </svg>
            </div>
            <h3 class="font-heading text-2xl text-text-primary font-semibold" data-i18n data-hy="&#1329;&#1408;&#1386;&#1381;&#1412;&#1398;&#1381;&#1408;" data-en="Values">&#1329;&#1408;&#1386;&#1381;&#1412;&#1398;&#1381;&#1408;</h3>
          </div>
          <div class="space-y-5">
            <div class="value-item">
              <p class="text-text-primary text-[15px] font-medium mb-0.5" data-i18n data-hy="&#1329;&#1382;&#1398;&#1406;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;" data-en="Integrity">Integrity</p>
              <p class="text-text-muted text-[13px] font-light leading-relaxed" data-i18n data-hy="&#1348;&#1381;&#1398;&#1412; &#1396;&#1381;&#1408; &#1377;&#1399;&#1389;&#1377;&#1407;&#1377;&#1398;&#1412;&#1400;&#1410;&#1396; &#1377;&#1404;&#1377;&#1403;&#1398;&#1400;&#1408;&#1380;&#1406;&#1400;&#1410;&#1396; &#1381;&#1398;&#1412; &#1383;&#1385;&#1387;&#1391;&#1377;&#1397;&#1387; &#1391;&#1377;&#1398;&#1400;&#1398;&#1398;&#1381;&#1408;&#1400;&#1406;" data-en="Unwavering commitment to ethical standards">Unwavering commitment to ethical standards</p>
            </div>
            <div class="value-item">
              <p class="text-text-primary text-[15px] font-medium mb-0.5" data-i18n data-hy="&#1350;&#1400;&#1408;&#1377;&#1408;&#1377;&#1408;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;" data-en="Innovation">Innovation</p>
              <p class="text-text-muted text-[13px] font-light leading-relaxed" data-i18n data-hy="&#1348;&#1381;&#1398;&#1412; &#1391;&#1387;&#1408;&#1377;&#1404;&#1400;&#1410;&#1396; &#1381;&#1398;&#1412; &#1377;&#1404;&#1377;&#1403;&#1377;&#1407;&#1377;&#1408; &#1407;&#1381;&#1389;&#1398;&#1400;&#1388;&#1400;&#1379;&#1387;&#1377;&#1398;&#1381;&#1408;" data-en="Forward-thinking investment strategies">Forward-thinking investment strategies</p>
            </div>
