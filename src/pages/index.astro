  <!-- Latest Insights Teaser -->
  <section class="relative py-32 sm:py-40 lg:py-48 overflow-hidden">
    <div class="absolute top-1/4 left-0 w-[500px] h-[500px] ambient-blob bg-gold-400"></div>

    <div class="section-inner max-w-[1200px] mx-auto px-6 lg:px-20 relative z-10">
      <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between mb-16 lg:mb-20">
        <div>
          <SectionHeader label="Latest Insights" labelHy="&#1358;&#1381;&#1408;&#1403;&#1387;&#1398; &#1344;&#1381;&#1407;&#1377;&#1382;&#1400;&#1407;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;&#1398;&#1381;&#1408;" />
          <h2 class="gs-reveal font-heading text-3xl sm:text-4xl lg:text-[3rem] text-text-primary font-semibold leading-[1.1] mt-4">
            <span data-i18n data-hy="&#1348;&#1407;&#1377;&#1390;&#1381;&#1388;&#1377;&#1391;&#1381;&#1408;&#1402; <span class='text-gold-gradient'>&#1329;&#1404;&#1377;&#1403;&#1398;&#1400;&#1408;&#1380;&#1400;&#1410;&#1385;&#1397;&#1400;&#1410;&#1398;</span>" data-en="Thought <span class='text-gold-gradient'>Leadership</span>">Thought <span class="text-gold-gradient">Leadership</span></span>
