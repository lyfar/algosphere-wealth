---
/**
 * Home page — composes all sections from components.
 */
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import '../styles/components.css';
import '../styles/animations.css';

import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Principles from '../components/Principles.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import GoldDivider from '../components/GoldDivider.astro';
---

<Layout title="Algosphere Asset Management">

  <Navigation />

  <Hero />

  <GoldDivider />

  <About />

  <GoldDivider />

  <Principles />

  <GoldDivider />

  <!-- Contact / Footer Section -->
  <footer id="contact" class="relative py-32 sm:py-40 lg:py-48 overflow-hidden">
    <div class="absolute top-1/3 right-0 w-[400px] h-[400px] ambient-blob bg-gold-400"></div>

    <div class="section-inner max-w-[1200px] mx-auto px-6 lg:px-20 relative z-10">
      <Contact />
      <Footer />
    </div>
  </footer>

  <!-- Main script — imports all modules -->
  <script>
    import { initLenis, animateHero, initParallax, initScrollAnimations } from '../scripts/animations';
    import { initCustomCursor } from '../scripts/cursor';
    import { createStarfield, initParticles } from '../scripts/particles';
    import { initNavbar, initMobileMenu } from '../scripts/navigation';
    import { switchLanguage, initLanguageSwitcher } from '../scripts/language';

    document.addEventListener('DOMContentLoaded', () => {
      createStarfield();
      initParticles();
      initLenis();
      initCustomCursor();
      initNavbar();
      initMobileMenu(switchLanguage);
      initLanguageSwitcher();
      animateHero();
      initParallax();
      initScrollAnimations();
    });
  </script>

</Layout>
