---
/**
 * Reusable glass card with icon, title, and body content.
 */
interface Props {
  title: string;
  titleHy?: string;
  iconPath: string;
  /** Additional SVG path (some icons have 2) */
  iconPath2?: string;
  class?: string;
}

const { title, titleHy, iconPath, iconPath2, class: className = '' } = Astro.props;
---

<div class:list={['glass-card p-10 lg:p-12 gs-reveal-scale', className]}>
  <div class="flex items-center gap-3.5 mb-8">
    <div class="w-11 h-11 border border-glass-border rounded-xl flex items-center justify-center bg-gold-400/[0.03]">
      <svg class="w-5 h-5 text-gold-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d={iconPath} />
        {iconPath2 && <path stroke-linecap="round" stroke-linejoin="round" d={iconPath2} />}
      </svg>
    </div>
    <h3
      class="font-heading text-2xl text-card-title font-semibold"
      data-i18n
      data-hy={titleHy || title}
      data-en={title}
    >
      {titleHy || title}
    </h3>
  </div>
  <slot />
</div>
