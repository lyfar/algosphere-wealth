---
/**
 * Hero section — cinematic full-screen intro with starfield, particles,
 * logo, headline, tagline, and scroll indicator.
 */
---

<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden noise-overlay">
  <div class="starfield" id="starfield"></div>
  <canvas id="particles-canvas"></canvas>

  <!-- Subtle radial glow -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(212,175,55,0.04)_0%,transparent_60%)]"></div>

  <div class="relative z-10 text-center px-6 max-w-[900px] mx-auto">
    <!-- Small Logo -->
    <div class="mb-16 flex justify-center gs-hero-el" data-hero-delay="0">
      <div class="w-[64px] h-[64px] border border-gold-400/25 rounded-full flex items-center justify-center hero-logo-ring">
        <span class="text-gold-gradient font-heading text-[1.8rem] font-semibold leading-none">A</span>
      </div>
    </div>

    <!-- Hero Headline -->
    <h1 class="font-heading text-4xl sm:text-5xl md:text-6xl lg:text-[4.5rem] font-semibold tracking-[-0.02em] leading-[1.08] mb-6 text-text-primary" id="hero-headline">
      <span class="gs-hero-el inline-block" data-hero-delay="0.2" data-i18n data-hy="&#1352;&#1408;&#1407;&#1381;&#1394; &#1359;&#1381;&#1405;&#1388;&#1377;&#1391;&#1377;&#1398;&#1384;" data-en="Where Vision" data-ru="Когда видение" data-fr="Quand la vision" data-ar="حين تلتقي الرؤية">Where Vision</span>
      <br />
      <span class="gs-hero-el inline-block" data-hero-delay="0.35" data-i18n data-hy="&#1344;&#1377;&#1398;&#1380;&#1387;&#1402;&#1400;&#1410;&#1396; &#1383; <em class='text-gold-gradient'>&#1338;&#1377;&#1404;&#1377;&#1398;&#1379;&#1400;&#1410;&#1385;&#1397;&#1377;&#1398;&#1384;</em>" data-en="Meets <em class='text-gold-gradient font-normal italic'>Legacy</em>" data-ru="создаёт <em class='text-gold-gradient font-normal italic'>наследие</em>" data-fr="forge <em class='text-gold-gradient font-normal italic'>l'héritage</em>" data-ar="<em class='text-gold-gradient font-normal italic'>بالإرث العريق</em>">Meets <em class="text-gold-gradient font-normal italic">Legacy</em></span>
    </h1>

    <!-- Tagline -->
    <p class="gs-hero-el text-[0.75rem] tracking-[0.2em] uppercase text-hero-tagline font-normal mt-10 mb-6" data-hero-delay="0.55" data-i18n data-hy="&#1363;&#1377;&#1391; &#1350;&#1381;&#1408;&#1380;&#1408;&#1400;&#1410;&#1396;&#1377;&#1397;&#1387;&#1398; &#1366;&#1400;&#1398;&#1380;&#1381;&#1408;&#1387; &#1343;&#1377;&#1404;&#1377;&#1406;&#1377;&#1408;&#1400;&#1410;&#1396;" data-en="Closed-End Investment Fund Management" data-ru="Управление закрытыми инвестиционными фондами" data-fr="Gestion de fonds d'investissement fermés" data-ar="إدارة صناديق الاستثمار المغلقة">
      Closed-End Investment Fund Management
    </p>

    <!-- Gold divider line -->
    <div class="gs-hero-el gs-line-h mt-4 mx-auto" data-hero-delay="0.7" style="width: 80px; height: 1px; background: linear-gradient(90deg, transparent, rgba(212,175,55,0.5), transparent);"></div>

    <!-- Accredited investors only -->
    <p class="gs-hero-el text-[0.65rem] tracking-[0.25em] uppercase text-hero-accent font-light mt-10" data-hero-delay="0.85" data-i18n data-hy="&#1344;&#1377;&#1406;&#1377;&#1407;&#1377;&#1408;&#1396;&#1377;&#1379;&#1408;&#1406;&#1377;&#1390; &#1350;&#1381;&#1408;&#1380;&#1408;&#1400;&#1394;&#1398;&#1381;&#1408;&#1387; &#1344;&#1377;&#1396;&#1377;&#1408;" data-en="Accredited Investors Only" data-ru="Только для аккредитованных инвесторов" data-fr="Réservé aux investisseurs accrédités" data-ar="للمستثمرين المعتمدين فقط">
      Accredited Investors Only
    </p>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-10 left-1/2 scroll-indicator gs-hero-el" data-hero-delay="1.3">
    <div class="w-[18px] h-[28px] border border-gold-400/15 rounded-full flex justify-center pt-1.5">
      <div class="w-[2px] h-[5px] bg-gold-400/30 rounded-full animate-bounce"></div>
    </div>
  </div>
</section>
